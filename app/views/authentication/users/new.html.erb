<div class="flex flex-col justify-center items-center mt-8 border-gray-300 bg-white w-11/12 sm:w-2/5 mx-auto rounded-xl py-14">
  <div>
    <h1 class="mb-5 text-teal-500 font-bold text-xl"> - <%= t('.title') %> - </h1>
  </div>
  <%= form_with(model: @user, class:'flex flex-col justify-center items-center') do |form| %>
    <% @user.errors.full_messages.each do |error| %>
      <div>
        <%= error %>
      </div>
    <% end %>
  
    <div class="flex flex-col justify-center items-start my-2">
      <%= form.label :email, class: 'p-1 bg-teal-400 text-white font-bold rounded-t-xl' %>
      <%= form.email_field :email, required: true, class: 'border-gray-300 rounded-b-xl rounded-tr-xl' %>
    </div>
  
    <div class="flex flex-col justify-center items-start mb-2">
      <%= form.label :username, class: 'p-1 bg-teal-400 text-white font-bold rounded-t-xl' %>
      <%= form.text_field :username, required: true, class: 'border-gray-300 rounded-b-xl rounded-tr-xl' %>
    </div>
  
    <div class="flex flex-col justify-center items-start mb-2">
      <%= form.label :password, class: 'p-1 bg-teal-400 text-white font-bold rounded-t-xl' %>
      <%= form.password_field :password, required: true, class: 'border-gray-300 rounded-b-xl rounded-tr-xl' %>
    </div>
  
    <div class="mt-4 p-2 bg-teal-400 text-white font-bold rounded-xl cursor-pointer">
      <%= form.submit class: "cursor-pointer" %>
    </div>
  <% end %>
</div>