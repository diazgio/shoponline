<div id="<%= dom_id category %>", class="category text-gray-600 px-4 py-2 rounded-2xl drop-shadow-sm bg-white w-80 flex justify-between mb-6">
  <h3 class="text-teal-500 font-bold"><%= category.name %></h3>
  <div class="flex gap-5">
    <%= link_to t('.edit'), edit_category_path(category), class:'hover:bg-teal-400 hover:text-white hover:font-bold hover:p-1 hover:rounded-xl hover:px-2' %>
    <%= link_to t('.delete'), category_path(category), data: {
      turbo_method: :delete,
      turbo_confirm: t('common.confirm')
    }, class: 'hover:bg-teal-400 hover:text-white hover:font-bold hover:p-1 hover:rounded-xl hover:px-2' %>
  </div>
</div>
