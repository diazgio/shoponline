<%= form_with(model: category, class:'flex flex-col justify-center items-center') do |form| %>
  <% @category.errors.full_messages.each do |error| %>
    <div>
      <%= error %>
    </div>
  <% end %>

  <div class="flex flex-col justify-center items-start my-2">
    <%= form.label :name, t('.name'), class: 'p-1 bg-teal-400 text-white font-bold rounded-t-xl' %>
    <%= form.text_field :name, required: true, class: 'border-gray-300 rounded-b-xl rounded-tr-xl' %>
  </div>

  <div class="mt-4 p-2 bg-teal-400 text-white font-bold rounded-xl cursor-pointer">
    <%= form.submit class: 'cursor-pointer' %>
  </div>
<% end %>
