<%= form_with(model: @product) do |form| %>
  <% if @product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.text_field :title,
      placeholder: t(".title_placeholder"),
      class: "rounded-2xl border-gray-200 mb-4 w-full"
    %>
  </div>

  <div>
    <%= form.text_area :description,
      placeholder: t(".description_placeholder"),
      class: "rounded-2xl border-gray-200 mb-4 w-full",
      rows: 5
    %>
  </div>

  <div>
    <%= form.number_field :price,
      placeholder: t(".price_placeholder"),
      class: "rounded-2xl border-gray-200 mb-4 w-full"
    %>
  </div>

  <div>
    <%= form.number_field :stock,
      placeholder: t(".stock_placeholder"),
      class: "rounded-2xl border-gray-200 mb-4 w-full"
    %>
  </div>

  <div>
    <%= form.collection_select :category_id,
      Category.all.order(name: :asc),
      :id, :name, { prompt: t(".category_placeholder") },
      { class: "rounded-2xl border-gray-200 mb-4 w-full text-gray-500"}
    %>
  </div>

  <div class="rounded-2xl border-gray-200 mb-4 w-full border-[1px] p-2 text-gray-500">
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div>
    <%= form.submit t('.submit'), class: "px-4 py-2 font-semibold text-sm bg-cyan-500 text-white rounded-2xl cursor-pointer shadow-sm" %>
  </div>
<% end %>
