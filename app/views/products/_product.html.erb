<div id="<%= dom_id product %>">
  <%= image_tag product.photo.attached? ? product.photo : 'placeholder.jpg', width: 200 %>
  <p>
    <strong>Title:</strong>
    <%= product.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= product.description %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

</div>
