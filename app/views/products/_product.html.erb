<div class="block sm:w-[calc(33.33333%_-_.5rem)] lg:w-[calc(25%_-_.5rem)] rounded-lg bg-white shadow-[0_2px_15px_-3px_rgba(0,0,0,0.07),0_10px_20px_-2px_rgba(0,0,0,0.04)] mb-3">
    <%= link_to product_path(product), 'data-turbo-frame': '_top' do %>
      <% if product.photo.attached? %>
        <%= image_tag product.photo, class: 'rounded-t-lg w-full h-2/4' %>
      <% else %>
        <%= image_tag 'placeholder.png', class: 'rounded-t w-full h-1/4' %>
      <% end %>
    <% end %>
    <div class="p-6">
        <h5 class="mb-2 text-xl font-medium leading-tight text-teal-500"><%= product.category.name %></h5>
        <div class="flex">
            <h2 class="mb-2 text-xl font-medium leading-tight text-neutral-800">
                <%= product.title %>
            </h2>
            <% if product.favorite%>
                <span class="star">â˜…</span>
            <% end %>
        </div>
        <p class="mb-4 text-base text-neutral-800 dark:text-neutral-200">
            <%= product.price %> $
        </p>
        <p class="mb-4 text-base text-neutral-800 dark:text-neutral-200">
            <%= product.stock %> Unidades
        </p>
        <p class="mb-4 text-base text-neutral-600 dark:text-neutral-200">
            <%= product.description %>
        </p>
        <%= link_to t('.see_more'), product_path(product), class: 'inline-block rounded bg-primary px-6 pb-2 pt-2.5 text-xs font-medium uppercase' %>
    </div>
</div>
